View(mamsleep)
# Basic scatter plot
ggplot(mamsleep, aes(x = time, y = name, col = sleep)) +
geom_point()
# Facet rows accoding to vore
ggplot(mamsleep, aes(x = time, y = name, col = sleep)) +
geom_point() +
facet_grid(vore ~ .)
# Specify scale and space arguments to free up rows
ggplot(mamsleep, aes(x = time, y = name, col = sleep)) +
geom_point() +
facet_grid(vore ~ ., scale = "free_y", space = "free_y")
